<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

		<%- include('partials/head') %> 

	<body class="body">
		<% if (locals.user != undefined){ %> 
			<%- include('partials/headerLogueado') %> 
		<% }else { %> 
			<%- include('partials/headerDeslogueado') %> 
		<% } %>  


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<% if(products.length>0) {%>
			<% for(let i=0; i< products.length; i++){ %>

						<div class="col-12 col-sm-6 col-lg-3">
							<a href="/producto/<%= products[i].id %>">
								<section class="product-box">
										<figure class="product-box_image">
											<img src="images/<%= products[i].image %> " alt="celular">
										</figure>
										<article class="product-box_data">
											<h2>Modelo: <%= products[i].modelo %> </h2>
											<p> Marca: <%= products[i].marca %></p>
											<p> Estado: <%= products[i].estado %></p>
											<p> Propietario: <%= products[i].User.userName %></p>
										</article>
									</a>
								</section>
							</a>
						</div>
			<%} %>
			<%}else{ %>
				<h2>No se encontraron resultados </h2>
			<%} %>
			<%- include('./partials/footer')  %> 
</body>

</html>